@model MSStoreWebApp.Models.Product

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4 " style="margin-left:50px">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" accept="image/*" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="select2 form-control js-example-basic-single" asp-for="CatagoryId" asp-items="@(new SelectList(ViewBag.catagoryy,nameof(Catagory.Id),nameof(Catagory.Name)))">
                    <option disabled selected>CATEGORY</option>
                </select>
                <span asp-validation-for="CatagoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="select2 form-control js-example-basic-single" asp-for="GenderId" asp-items="@(new SelectList(ViewBag.genderr,nameof(Gender.Id),nameof(Gender.Name)))">
                    <option disabled selected>Gender</option>
                </select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="select2 form-control js-example-basic-single" asp-for="BestId" asp-items="@(new SelectList(ViewBag.bestt,nameof(Best.Id),nameof(Best.Name)))">
                    <option disabled selected>Best</option>
                </select>
                <span asp-validation-for="BestId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

